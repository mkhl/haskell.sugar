<?xml version="1.0"?>
<action-recipes>

<!-- Auto-Pairs -->
    <snippet id="org.purl.net.mkhl.haskell.actions.OpenParen" category="hidden">
        <title>Open Parenthesized Block</title>
        <text-trigger key-equivalent="("></text-trigger>
        <text>($0)</text>
        <syntax-context>haskell, haskell *</syntax-context>
    </snippet>

    <snippet id="org.purl.net.mkhl.haskell.actions.OpenBracket" category="hidden">
        <title>Open Bracketed Block</title>
        <text-trigger key-equivalent="["></text-trigger>
        <text>[$0]</text>
        <syntax-context>haskell, haskell *</syntax-context>
    </snippet>

    <snippet id="org.purl.net.mkhl.haskell.actions.OpenBrace" category="hidden">
        <title>Open Braced Block</title>
        <text-trigger key-equivalent="{"></text-trigger>
        <text>{$0}</text>
        <syntax-context>haskell, haskell *</syntax-context>
    </snippet>

    <snippet id="org.purl.net.mkhl.haskell.actions.OpenDoubleQuote" category="hidden">
        <title>Open String</title>
        <text-trigger key-equivalent="&quot;"></text-trigger>
        <text><![CDATA["$0"]]></text>
        <syntax-context>haskell, haskell *</syntax-context>
    </snippet>

    <snippet id="org.purl.net.mkhl.haskell.actions.OpenSingleQuote" category="hidden">
        <title>Open Character</title>
        <text-trigger key-equivalent="'"></text-trigger>
        <text>'$0'</text>
        <syntax-context>haskell, haskell *</syntax-context>
    </snippet>

    <snippet id="org.purl.net.mkhl.haskell.actions.OpenBacktick" category="hidden">
        <title>Open Operator</title>
        <text-trigger key-equivalent="`"></text-trigger>
        <text><![CDATA[\`$0\`]]></text>
        <syntax-context>haskell, haskell *</syntax-context>
    </snippet>

</action-recipes>
